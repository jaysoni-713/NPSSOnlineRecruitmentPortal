@model NPSSOnlineRecruitmentPortal.DBModel.ApplicantMaster
@{
    ViewBag.Title = "ApplicationSuccessful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content">
            <!-- Step wizard -->
            <div class="box box-default">
                <!-- /.box-header -->
                <div class="box-body wizard-content" id="postSelection">
                    <p style="padding-left: 50px; color:#398bf7;font-size:x-large;">
                        @if (Model.IsAppliedForSupervisor)
                        {
                        <p style="padding-left: 50px; color:#398bf7;font-size:x-large;">Your application for the post of <u>Trained Graduate Supervisor</u> is successfully submitted.<br />Your application number is <b> <u>@Model.SupervisotApplicationID</u></b> </p>
                            <br /><br /><br />
                        }
                        @if (Model.ISAppliedForAsstAO)
                        {
                            <p style="padding-left: 50px; color:#398bf7;font-size:x-large;">Your application for the post of <u>Assistant Administrative Officer</u> is successfully submitted.<br />Your application number is <b> <u>@Model.AsstAOApplicationID</u></b> </p>
                        }
                        @if (Model.ISAppliedForAsstAO || Model.IsAppliedForSupervisor)
                        {
                            <br />
                            <p style="padding-left: 50px; color:#398bf7;font-size:x-large;">Your Application Details is sent to your email id (@Model.EmailId).</p>
                        }
                        </p>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- Validation wizard -->
            </section>
            <!-- /.content -->
        </div>
    </center>